SURFACE 1-45
	Solid 1e100 1.0 1e100	
END
TRANSPORT
	-cells			45
	-shifts			10
	-time_step		72000	# 1/2.4 cm/day * 2 cm * 24*3600 sec/day
#	-time_step		43200	# 1/4 cm/day * 2 cm * 24*3600 sec/day
	-flow_direction		backward
	-boundary_condition	flux	flux
	-length			.02
	-disp			.005
	-diffusion_coefficient	1e-9

#	-print_cells		50
#	-print_frequency	10
SELECTED_OUTPUT
	-file 	krest.sel
	-reset 	false
	-time
	-distance
	-totals	[224Ra]
END